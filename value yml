replicaCount: 2

image:
  repository: myregistry/mywebapp
  tag: latest
  pullPolicy: IfNotPresent

service:
  type: ClusterIP
  port: 80

ingress:
  enabled: true
  className: nginx
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
  hosts:
    - host: mywebapp.example.com
      paths:
        - path: /
          pathType: Prefix
  tls:
    - secretName: mywebapp-tls
      hosts:
        - mywebapp.example.com

resources:
  limits:
    cpu: 500m
    memory: 512Mi
  requests:
    cpu: 250m
    memory: 256Mi

env:
  - name: ENVIRONMENT
    value: production
  - name: LOG_LEVEL
    value: info

nodeSelector: {}

tolerations: []

affinity: {}
